<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>clr2ts</ToolCommandName>
    <PackageOutputPath>../../dist</PackageOutputPath>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.5.1</Version>
    <Authors>Dennis Stetter</Authors>
    <Company />
    <Product>clr2ts</Product>
    <PackageId>clr2ts</PackageId>
    <Description>Transpiler that takes CLR assemblies and outputs corresponding typescript definitions.</Description>
    <PackageProjectUrl></PackageProjectUrl>
    <RepositoryUrl>https://github.com/Chips100/clr2ts</RepositoryUrl>
    <PackageTags>CLR TypeScript .NET C#</PackageTags>
    <PackageReleaseNotes>Support DateOnly and TimeOnly out of the box (can be overridden via custom type maps).</PackageReleaseNotes>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Clr2Ts.Transpiler\Clr2Ts.Transpiler.csproj" />
  </ItemGroup>
</Project>
